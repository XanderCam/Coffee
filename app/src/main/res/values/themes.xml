<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.TheCoffeeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/coffee_medium</item>
        <item name="colorPrimaryVariant">@color/coffee_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cream</item>
        <item name="colorSecondaryVariant">@color/cream_light</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar and Navigation bar colors -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Glass effect values -->
        <item name="glassEffectBackground">@color/white</item>
        <item name="glassEffectAlpha">0.85</item>
        <item name="glassEffectElevation">4dp</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.TheCoffeeApp.Button</item>
        <item name="tabStyle">@style/Widget.TheCoffeeApp.TabLayout</item>
        <item name="materialCardViewStyle">@style/Widget.TheCoffeeApp.Card</item>
    </style>

    <!-- No ActionBar theme for MainActivity -->
    <style name="Theme.TheCoffeeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom Button style -->
    <style name="Widget.TheCoffeeApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/coffee_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Toolbar style -->
    <style name="Theme.TheCoffeeApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.TheCoffeeApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Glass effect attributes -->
    <attr name="glassEffectBackground" format="color" />
    <attr name="glassEffectAlpha" format="float" />
    <attr name="glassEffectElevation" format="dimension" />

    <!-- Glass effect style -->
    <style name="GlassEffect">
        <item name="android:background">?attr/glassEffectBackground</item>
        <item name="android:alpha">?attr/glassEffectAlpha</item>
        <item name="android:elevation">?attr/glassEffectElevation</item>
    </style>

    <!-- Tab style -->
    <style name="Widget.TheCoffeeApp.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">?attr/colorOnSurface</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Card style -->
    <style name="Widget.TheCoffeeApp.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/glassEffectBackground</item>
        <item name="cardElevation">?attr/glassEffectElevation</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>
