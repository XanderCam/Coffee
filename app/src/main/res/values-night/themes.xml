<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme -->
    <style name="Theme.TheCoffeeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/coffee_light</item>
        <item name="colorPrimaryVariant">@color/coffee_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cream_light</item>
        <item name="colorSecondaryVariant">@color/cream</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar and Navigation bar colors -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/cream_light</item>
        <item name="android:textColorSecondary">@color/cream</item>
        <item name="android:textColorHint">@color/coffee_light</item>
        
        <!-- Glass effect values -->
        <item name="glassEffectBackground">@color/coffee_dark</item>
        <item name="glassEffectAlpha">0.85</item>
        <item name="glassEffectElevation">4dp</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.TheCoffeeApp.Button.Dark</item>
        <item name="tabStyle">@style/Widget.TheCoffeeApp.TabLayout.Dark</item>
        <item name="materialCardViewStyle">@style/Widget.TheCoffeeApp.Card</item>
    </style>

    <!-- No ActionBar theme for MainActivity -->
    <style name="Theme.TheCoffeeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom Button style for dark theme -->
    <style name="Widget.TheCoffeeApp.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/coffee_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Tab style for dark theme -->
    <style name="Widget.TheCoffeeApp.TabLayout.Dark" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/cream</item>
        <item name="tabSelectedTextColor">@color/coffee_light</item>
        <item name="tabIndicatorColor">@color/coffee_light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Glass effect style -->
    <style name="GlassEffect">
        <item name="android:background">?attr/glassEffectBackground</item>
        <item name="android:alpha">?attr/glassEffectAlpha</item>
        <item name="android:elevation">?attr/glassEffectElevation</item>
    </style>

    <!-- Toolbar styles -->
    <style name="Theme.TheCoffeeApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.TheCoffeeApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />
</resources>
